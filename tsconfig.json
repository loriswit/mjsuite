{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "nodenext",
    "rootDir": "src",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  }
}
